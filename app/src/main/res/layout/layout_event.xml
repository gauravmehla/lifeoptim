<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#4CAF50"
    android:backgroundTint="#4CAF50"
    android:orientation="vertical"
    app:barrierMargin="20dp">

    <TextView
        android:id="@+id/text_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#65FF1D"
        android:backgroundTint="#65FF1D"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#DC3232"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="12"
        android:text="Alert"
        android:textColor="#EF0505"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:text="02:00 PM"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/snooze_icon"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/snooze" />

        <TextView
            android:id="@+id/text_event_description"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="CSIS 3175 Lecture"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="700 Royal Ave, New Westminster, BC V3M 5Z5"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:text="05:30 PM"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>