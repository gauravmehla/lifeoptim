<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_exit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:backgroundTint="#000000"
        android:fontFamily="@font/barrio"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/btn_exit"
        android:textColor="#399215"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/barrio"
        android:gravity="center_horizontal"
        android:text="@string/txt_connect"
        android:textColor="#A0A49E"
        android:textColorHighlight="#F2EEEE"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_connect_gc"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E3DFDF"
        android:fontFamily="@font/barrio"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:rotationY="1"
        android:scrollbarStyle="outsideInset"
        android:text="@string/connect"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#399215"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_upload_gc"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E3DFDF"
        android:fontFamily="@font/barrio"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:rotationY="1"
        android:text="@string/upload"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#399215"
        android:textSize="24sp" />
</LinearLayout>